{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KSC",
  "version": "1.0.0",
  "identifier": "com.kscsitejager.app",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "KSC",
        "width": 320,
        "height": 400,
        "resizable": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "copyright": "MIT License",
    "shortDescription": "Killer Sudoku Combo",
    "category": "Games",
    "icon": [
      "icons/icon.png",
      "icons/android/ldpi.png",
      "icons/android/mdpi.png",
      "icons/android/hdpi.png",
      "icons/android/xhdpi.png",
      "icons/android/xxhdpi.png",
      "icons/android/xxxhdpi.png"
    ],
    "android": {
      "minSdkVersion": 24
    }
  }
}
